package org.bazaar.giza.cart.mapper;

import org.bazaar.giza.cart.dto.CartItemRequest;
import org.bazaar.giza.cart.dto.CartItemResponse;
import org.bazaar.giza.cart.entity.CartItem;
import org.springframework.stereotype.Service;

@Service
public class CartItemMapper {
    public CartItem toCartItem(CartItemRequest request) {
        return CartItem.builder()
                .id(request.id())
                .bazaarUserId(request.bazaarUserId())
                .productId(request.productId())
                .quantity(request.quantity())
                .currentPrice(request.currentPrice())
                .build();
    }

    public CartItemResponse toCartItemResponse(CartItem cartItem) {
        return CartItemResponse.builder()
                .id(cartItem.getId())
                .bazaarUserId(cartItem.getBazaarUserId())
                .productId(cartItem.getProductId())
                .quantity(cartItem.getQuantity())
                .priceAtCartTime(cartItem.getPriceAtCartTime())
                .build();
    }
}
